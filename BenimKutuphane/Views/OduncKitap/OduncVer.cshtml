@model BenimKutuphane.Models.Entity.TabloHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <b>Üye</b>
        @Html.DropDownListFor(k => k.TabloUyeler.ID, (List<SelectListItem>)ViewBag.dgr1,
       new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <b>Kitap</b>
        @Html.DropDownListFor(k => k.TabloKitap.ID, (List<SelectListItem>)ViewBag.dgr2,
      new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <b>Personel</b>
        @Html.DropDownListFor(k => k.TabloPersonel.ID, (List<SelectListItem>)ViewBag.dgr3,
      new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <b>Kitap Alış Tarihi</b>
        <input type="text" class="form-control" name="AlisTarihi"
               value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <b>Kitap İade Tarihi</b>
        <input type="text" class="form-control" name="IadeTarih"
               value="@DateTime.Now.AddDays(15).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kitabı Ödünç Ver</button>
        <input type="hidden" value="false" name="IslemDurum">
    </div>

</form>



