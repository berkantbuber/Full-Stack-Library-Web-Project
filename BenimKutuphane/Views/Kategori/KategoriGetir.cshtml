@model BenimKutuphane.Models.Entity.TabloKategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle","Kategori", FormMethod.Post))
            {
                <div style="margin-top:15px"></div>
                <div class="form-group">
                   @Html.LabelFor(k=>k.ID)
                   @Html.TextBoxFor(k=>k.ID, new{@class="form-control"})
                   <br />
                   @Html.LabelFor(k=>k.Ad)
                   @Html.TextBoxFor(k=>k.Ad, new {@class="form-control"})
                </div>           
                <div style="margin-top:15px">
                    <button class="btn btn-success">Kategori Bilgisini Güncelle</button>
                </div>
            }

